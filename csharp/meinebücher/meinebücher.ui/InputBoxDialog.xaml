<Window x:Class="mybooks.ui.InputBoxDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mybooks.ui"
        mc:Ignorable="d"
        Title="" Height="110" Width="300" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Label x:Name="label" Content="Label" Padding="5" Margin="10"/>    
            <TextBox x:Name="textbox" Padding="5" Margin="10" />
        </DockPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Cancel" IsCancel="True" Width="96" Margin="10" Padding="5"/>
            <Button x:Name="btnOk" Content="Ok" IsDefault="True" Width="96" Margin="10" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>
